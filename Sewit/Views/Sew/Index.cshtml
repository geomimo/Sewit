@model List<DressVM>


<div class="h-100">
    <div class="jumbotron main-jumbotron p-0 shadow mt-3" style="height:450px;">
        <div class="h-100 py-5" style="background-image:url('/photos/background.jpg'); background-position: center; background-repeat: no-repeat; background-size: cover;">
            <div class="text-center">
                <h1 class="display-3 font-weight-normal">
                    Create stunning dresses in seconds
                </h1>
                <a class="btn btn-info btn-lg mt-5" asp-controller="Design" asp-action="">Get started</a>

            </div>
        </div>
    </div>
    <div class="jumbotron main-jumbotron shadow p-0" style="height:450px;">
        <div class="h-100 py-5" style="background-image:url('/photos/background2.jpg'); background-position: center; background-repeat: no-repeat; background-size: cover;">
                <div class="row">
                    <div class="col-3">
                        <div class="pl-5">
                            <h3 class="display-4 font-weight-normal">
                                Let us recommend you some options!
                            </h3>
                            <div class="text-center"><a class="btn btn-info btn-lg mt-5" asp-controller="Sew" asp-action="Top">Show me</a></div>
                        </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <h2>Our work</h2>
        <div class="row">


            @foreach (var dress in Model)
            {
                <div class="col-3">
                    <div class="card card-bg flex-fill shadow">
                        <a asp-controller="Dress" asp-action="Details" asp-route-id=@dress.DressId>
                            <img class="card-img-top img-recommend" src=~/@dress.PhotoPath />
                        </a>
                        <div class="card-body">
                            <div class="d-block">
                                <h6 class="d-inline">Top: @dress.Top.Name</h6><br />
                                <h6 class="d-inline">Skirt: @dress.Skirt.Name</h6><br />
                                <h6 class="d-inline">Sleeve: @dress.Sleeve.Name</h6><br />
                            </div>
                        </div>
                    </div>

                </div>
            }


        </div>
    </div>
</div>
